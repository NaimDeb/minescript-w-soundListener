{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "Minescript Mod",
  "description": "Mod for scripting Minecraft using Python",
  "authors": [
    "maxuser@minescript.net"
  ],
  "contact": {
    "homepage": "https://minescript.net/"
  },

  "license": "GPL-3.0-only for Java sources, MIT for Python sources",
  "icon": "assets/modid/minescript-logo.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.minescript.fabric.MinescriptFabricMod"
    ]
  },

  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "fabric-screen-api-v1": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
